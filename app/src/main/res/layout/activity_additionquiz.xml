<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/addlessbg"
   >

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="200dp"
        android:textColor="@android:color/white"

        />

    <RadioGroup
        android:id="@+id/optionsRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >

        <RadioButton
            android:id="@+id/option1RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 1"
            android:padding="20dp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="40dp"
            />

        <RadioButton
            android:id="@+id/option2RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 2"
            android:padding="20dp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/montserrat"
            />

        <RadioButton
            android:id="@+id/option3RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 3"
            android:padding="20dp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/montserrat"
            />

        <RadioButton
            android:id="@+id/option4RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 4"
            android:padding="20dp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/montserrat"
            />

    </RadioGroup>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/btnradius"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        />

    <Button
        android:id="@+id/finishButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/btnradius"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/white"
        />

</LinearLayout>
